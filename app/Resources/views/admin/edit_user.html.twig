{% extends 'base.html.twig' %}

{% block header %}
    {% include('header.html.twig') %}
{% endblock %}

{% block body %}
	{% include('flash-messages.html.twig') %}
    <form action="{{path('tls_update_user')}}" method="POST">
    <input type="hidden" name="id" value="{{data[0].id}}">

	<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
      <h1 class="display-4">Edit User</h1>

        <div class="row top-buffer">
            <div class="col-sm-4 text-right">First Name:</div>
            <div class="col-sm-6">
                <input type="text" name="first" value="{{data[0].first}}" required class="form-control">
            </div>
        </div>

        <div class="row top-buffer">
            <div class="col-sm-4 text-right">Last Name:</div>
            <div class="col-sm-6">
                <input type="text" name="last" value="{{data[0].last}}" required class="form-control">
            </div>
        </div>

        <div class="row top-buffer">
        	<div class="col-sm-4 text-right">Username:</div>
        	<div class="col-sm-6">
        		<input type="text" name="username" value="{{data[0].username}}" class="form-control">
        	</div>
        </div>

        <div class="row top-buffer">
        	<div class="col-sm-4 text-right">Password:</div>
        	<div class="col-sm-6">
        		<input type="password" name="password" placeholder="Only if you wish to change" class="form-control">
        	</div>
        </div>

        <div class="row top-buffer">
        	<div class="col-sm-4 text-right">Email:</div>
        	<div class="col-sm-6">
        		<input type="text" name="email" value="{{data[0].email}}" class="form-control">
        	</div>
        </div>

        <div class="row top-buffer">
        	<div class="col-sm-4 text-right">Enabled</div>
        	<div class="col-sm-6">
        		<select name="enabled" class="form-control">
        			{% if data[0].enabled == "0" %}
        				<option selected value="false">No</option>
        				<option value="true">Yes</option>
        			{% else %}
        				<option selected value="true">Yes</option>
        				<option value="false">No</option>
        			{% endif %}
