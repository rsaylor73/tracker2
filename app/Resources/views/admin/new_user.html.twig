                        <option value="43">Tennessee</option>
                        <option value="44">Texas</option>
                        <option value="45">Utah</option>
                        <option value="46">Vermont</option>
                        <option value="47">Virginia</option>
                        <option value="48">Washington</option>
                        <option value="49">West Virginia</option>
                        <option value="50">Wisconsin</option>
                        <option value="51">Wyoming</option>

                    </optgroup>
                </select>
            </div>
        </div>

        <div class="row top-buffer">
            <div class="col-sm-4">&nbsp;</div>
            <div class="col-sm-6">
                <div class="alert alert-warning">
                    <br>Hold <b>Cmd</b> on Mac or <b>Cntr</b> on Win to select multiple fields.
                </div>
            </div>
        </div>

        <div class="row top-buffer">
        	<div class="col-sm-4 text-right">User Roles (may select multiple)</div>
        	<div class="col-sm-6">
                <select name="user_roles[]" multiple size="7" required class="form-control">
                    <optgroup label="Available User Roles">
                        <option value="ROLE_USER" selected>ROLE_USER (Required)</option>
                        <option value="ROLE_CLIENT">ROLE_CLIENT</option>
                        <option value="ROLE_STAFF">ROLE_STAFF</option>
                        <option value="ROLE_LEAD_REVIEWER">ROLE_LEAD_REVIEWER</option>
                        <option value="ROLE_ADMIN">ROLE_ADMIN</option>
                    </optgroup>
        		</select>
        	</div>
        </div>

        <div class="row top-buffer">
            <div class="col-sm-4">&nbsp;</div>
            <div class="col-sm-6">
                <input type="submit" value="Save" class="btn btn-primary">&nbsp;
                <input type="button" value="Cancel" class="btn btn-warning" onclick="document.location.href='{{path('tls_list_users')}}'">
            </div>
        </div>
    </div>
    </form>

{% endblock %}

