{% extends 'base.html.twig' %}

{% block header %}
    {% include('header.html.twig') %}
{% endblock %}

{% block body %}
	{% include('flash-messages.html.twig') %}
    <form action="{{path('tls_save_user')}}" method="POST">
	<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
      <h1 class="display-4">New User</h1>

        <div class="row top-buffer">
            <div class="col-sm-4 text-right">First Name:</div>
            <div class="col-sm-6">
                <input type="text" name="first" value="{{first}}" required class="form-control">
            </div>
        </div>

        <div class="row top-buffer">
            <div class="col-sm-4 text-right">Last Name:</div>
            <div class="col-sm-6">
                <input type="text" name="last" value="{{last}}" required class="form-control">
            </div>
        </div>

        <div class="row top-buffer">
        	<div class="col-sm-4 text-right">Username:</div>
        	<div class="col-sm-6">
        		<input type="text" name="username" value="{{username}}" required class="form-control">
        	</div>
        </div>

        <div class="row top-buffer">
        	<div class="col-sm-4 text-right">Password:</div>
        	<div class="col-sm-6">
        		<input type="password" name="password" required class="form-control">
        	</div>
        </div>

        <div class="row top-buffer">
        	<div class="col-sm-4 text-right">Email:</div>
        	<div class="col-sm-6">
        		<input type="text" name="email" value="{{email}}" required class="form-control">
        	</div>
        </div>

        <div class="row top-buffer">
        	<div class="col-sm-4 text-right">Enabled</div>
        	<div class="col-sm-6">
        		<select name="enabled" required class="form-control">
    				<option selected value="true">Yes</option>
    				<option value="false">No</option>
        		</select>
        	</div>
        </div>

        <div class="row top-buffer">
            <div class="col-sm-4">&nbsp;</div>
            <div class="col-sm-6">
                <div class="alert alert-warning">
                    <br>Hold <b>Cmd</b> on Mac or <b>Cntr</b> on Win to select multiple fields.
                </div>
            </div>
        </div>

        <div class="row top-buffer">
            <div class="col-sm-4 text-right">States (may select multiple)</div>
            <div class="col-sm-6">
