{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}

    <div class="row">
        <div class="col-sm-3">&nbsp;</div>
        <div class="col-sm-9">
            <h3>&nbsp;&nbsp;Login</h3>
        </div>
    </div>

    <div class="row top-buffer">
        <div class="col-sm-3">&nbsp;</div>
        <div class="col-sm-2">{{ 'security.login.username'|trans }}</div>
        <div class="col-sm-3">
            <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" class="form-control" />
        </div>
        <div class="col-sm-4">&nbsp;</div>
    </div>

    <div class="row top-buffer">
        <div class="col-sm-3">&nbsp;</div>
        <div class="col-sm-2">{{ 'security.login.password'|trans }}</div>
        <div class="col-sm-3">
            <input type="password" id="password" name="_password" required="required" autocomplete="current-password" class="form-control" />
        </div>
        <div class="col-sm-4">&nbsp;</div>
    </div>

    <div class="row top-buffer">
        <div class="col-sm-5">&nbsp;</div>
        <div class="col-sm-3">
            <input type="submit" value="{{ 'security.login.submit'|trans }}" class="btn btn-success">&nbsp;
            <input type="button" value="Forgot Password" 
            class="btn btn-primary"
            onclick="document.location.href='{{path('fos_user_resetting_request')}}'">
        </div>
        <div class="col-sm-4">&nbsp;</div>
    </div>
</form>